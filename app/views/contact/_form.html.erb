<%= form_for(@contact, { url:  contact_send_path, method: :post }) do |f| %>

  <div class="field">
    <%= f.label :name, 'Nome Completo' %>
    <%= f.text_field :name, class: 'form-control',
    required: 'required', placeholder: 'Digite o nome' %>
  </div>

  <div class="field">
    <%= f.label :email, 'E-mail' %>
    <%= f.email_field :email, class: 'form-control', required: 'required',
    placeholder: 'Digite o e-mail', autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label :phone, 'Telefone' %>
    <%= f.phone_field :phone, class: 'form-control', required: 'required',
    placeholder: 'Digite o telefone', autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label :subject, 'Assunto' %>
    <%= f.text_field :subject, class: 'form-control', required: 'requierd',
    placeholder: 'Digite o assunto', autocomplete: 'off' %>
  </div>

  <div class="field">
    <%= f.label :message, 'Mensagem' %>
    <%= f.text_area :message, class: 'form-control', required: 'required',
    placeholder: 'Digite a mensagem', autocomplete: 'off' %>
  </div>

  <div class="actions"><br />
    <%= f.submit 'Enviar Mensagem', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>